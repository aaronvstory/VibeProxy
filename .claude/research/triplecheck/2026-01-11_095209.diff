+        "Error"   { $Script:Theme.Error }
+        default   { $Script:Theme.Glow }
+    }
+
+    $icon = switch ($Type) {
+        "Success" { "âœ“" }
+        "Warning" { "âš " }
+        "Error"   { "âœ—" }
+        default   { "â„¹" }
+    }
+
+    Write-Host ""
+    Write-Host "  $icon $Message" -ForegroundColor $color
+
+    if ($Type -ne "Error") {
+        Start-Sleep -Milliseconds $DurationMs
+    }
+}
